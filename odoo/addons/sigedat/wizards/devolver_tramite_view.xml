<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista del formulario del wizard devolver trámite -->
        <record id="sigedat_wizard_devolver_tramite_form" model="ir.ui.view">
            <field name="name">sigedat.wizard.devolver_tramite.form</field>
            <field name="model">sigedat.wizard.devolver_tramite</field>
            <field name="arch" type="xml">
                <form string="Devolver Trámite">
                    <group>
                        <group>
                            <field name="solicitud_id" readonly="1"/>
                            <field name="current_tipo_cita" readonly="1"/>
                        </group>
                        <group>
                            <field name="tipo_cita_devolucion_id" 
                                   options="{'no_create': True, 'no_open': True}"/>
                        </group>
                    </group>
                    
                    <group>
                        <field name="motivo_devolucion" 
                               placeholder="Indique el motivo por el cual devuelve esta solicitud..."
                               rows="4"/>
                    </group>
                    
                    <footer>
                        <!-- Botón para devolver trámite -->
                        <button name="devolver_tramite" 
                                type="object" 
                                string="Devolver Trámite" 
                                class="btn-primary"
                                confirm="¿Está seguro de que desea devolver esta solicitud con observaciones?"/>
                        
                        <!-- Botón para cancelar -->
                        <button string="Cancelar" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Acción del wizard -->
        <record id="sigedat_wizard_devolver_tramite_action" model="ir.actions.act_window">
            <field name="name">Devolver Trámite</field>
            <field name="res_model">sigedat.wizard.devolver_tramite</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="sigedat_wizard_devolver_tramite_form"/>
        </record>
    </data>
</odoo>
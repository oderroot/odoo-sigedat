<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    =================================================================
    Wizard View
    =================================================================
    -->
    <record model="ir.ui.view" id="sigedat_wizard_agregar_contacto">
        <field name="name">Descargar</field>
        <field name="model">sigedat.wizard.agregar_contacto</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <separator string="Agregar contacto"/>
                    <group>
                        <field name="tramite_id" readonly="1"/>
                        <field name="name"/>
                        <field name="correo_electronico"/>
                    </group>
                    <footer>
                        <button string="Agregar"
                            name="agregar_contacto"
                            type="object"
                            class="btn-primary"
                        />
                        <button string="Cancelar" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="sigedat_wizard_agregar_contacto_action">
        <field name="name">Agregar contacto</field>
        <field name="res_model">sigedat.wizard.agregar_contacto</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    =================================================================
    sigedat.equipo_apoyo
    Equipo de Apoyo
    =================================================================
    -->
    <record id="equipo_apoyo_search" model="ir.ui.view">
        <field name="name">sigedat.equipo_apoyo.search</field>
        <field name="model">sigedat.equipo_apoyo</field>
        <field name="arch" type="xml">
            <search>
                <field name="grupo_id" />
                <field name="tramite_id" />
                <field name="activo" />
                <group expand="0" string="Group By">
                </group>
            </search>
        </field>
    </record>
    <record id="equipo_apoyo_form" model="ir.ui.view">
        <field name="name">sigedat.equipo_apoyo.form</field>
        <field name="model">sigedat.equipo_apoyo</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <group>
                        <field name="grupo_id" />
                        <field name="tramite_id" />
                        <field name="activo" groups="sigedat.administrador"/>
                    </group>
                    <notebook>
                        <page string="Personas" >
                            <field name="persona_ids" nolabel="1" context="{'equipo_id': active_id}">
                                <tree>
                                    <field name="tipo_persona" />
                                    <field name="name" />
                                    <field name="apellido" attrs="{
                            'invisible': [('tipo_persona','=','juridica')],}" />
                                    <button
                                        type="object"
                                        name="eliminar_apoyo"
                                        icon="fa-trash"
                                        context="{'persona_id': active_id}"
                                        />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="equipo_apoyo_tree">
        <field name="name">sigedat.equipo_apoyo.tree</field>
        <field name="model">sigedat.equipo_apoyo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="grupo_id" />
                <field name="tramite_id" />
                <field name="activo" />
            </tree>
        </field>
    </record>
</odoo>
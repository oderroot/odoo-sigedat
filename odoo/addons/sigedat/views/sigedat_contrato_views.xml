<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    =================================================================
    sigedat.contrato
    Contrato
    =================================================================
    -->
    <record id="contrato_search" model="ir.ui.view">
        <field name="name">sigedat.contrato.search</field>
        <field name="model">sigedat.contrato</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="tipo_id" />
                <field name="objeto" />
                <field name="state" />
                <field name="area_id" />
                <filter name="filtro_state_previo"
                    string="Previo"
                    help="Filtrar por estado previo"
                    domain="[('state', '=', 'previo')]"
                />
                <filter name="filtro_state_ejecucion"
                    string="Ejecución"
                    help="Filtrar por estado ejecucion"
                    domain="[('state', '=', 'ejecucion')]"
                />
                <filter name="filtro_state_terminado"
                    string="Terminado"
                    help="Filtrar por estado terminado"
                    domain="[('state', '=', 'terminado')]"
                />
                <group expand="0" string="Group By">
                    <filter string="Tipo de acuerdo" context="{'group_by':'tipo_id'}" domain="" name="group_tipo_id"/>
                    <filter string="Estado" context="{'group_by':'state'}" domain="" name="group_state"/>
                    <filter string="Area" context="{'group_by':'area_id'}" domain="" name="group_area_id"/>
                </group>
            </search>
        </field>
    </record>
    <record id="contrato_form" model="ir.ui.view">
        <field name="name">sigedat.contrato.form</field>
        <field name="model">sigedat.contrato</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <field name="tipo" invisible="1"/>
                    <group string="Información Basica" col="4">
                        <field name="tipo_id" readonly="1"/>
                        <field name="name" readonly="1"/>
                        <field name="fecha_inicio" readonly="1"/>
                        <field name="fecha_fin" readonly="1"/>
                        <field name="numero_disenio" attrs="{'invisible': [('tipo_record','!=', 'obra')]}" readonly="1"/>
                        <field name="tipo_record" attrs="{'invisible': [('tipo','not in', ['idu', 'convenio'])]}" readonly="1"/>
                    </group>
                    <group>
                        <field name="objeto" readonly="1"/>
                    </group>
                    <group string="Información de la Empresa/Contratista" col="4">
                        <field name="empresa_contratista" readonly="1"/>
                        <field name="correo_electronico_contratista" readonly="1"/>
                        <field name="telefono_contratista" readonly="1"/>
                    </group>
                    <group string="Información del Supervisor/Delegado" col="4">
                        <field name="area_id" readonly="1"/>
                        <field name="supervisor" readonly="1"/>
                        <field name="correo_electronico_supervisor" readonly="1"/>
                    </group>
                    <group string="Información de la Interventoría" col="4">
                        <field name="contrato_interventoria" readonly="1"/>
                        <field name="nombre_empresa_interventor" readonly="1"/>
                        <field name="nombre_interventor" readonly="1"/>
                        <field name="correo_electronico_interventor" readonly="1"/>
                        <field name="telefono_interventor" readonly="1"/>
                    </group>
                    <group col="2">
                        <field name="tiene_frente" />
                    </group>
                    <notebook>
                        <page string="Frentes"  attrs="{'invisible': [('tiene_frente','=', 'no')], 'required': [('tiene_frente','=', 'si')]}">
                            <group>
                                <field name="frente_ids" nolabel="1" colspan="4" context="{'contrato_id': active_id}">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="ubicacion"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="contrato_tree">
        <field name="name">sigedat.contrato.tree</field>
        <field name="model">sigedat.contrato</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="objeto" />
                <field name="state" />
                <field name="tipo_id" />
                <field name="area_id" />
            </tree>
        </field>
    </record>
</odoo>
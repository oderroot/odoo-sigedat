<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    =================================================================
    sigedat.frente
    Frente
    =================================================================
    -->
    <record id="frente_search" model="ir.ui.view">
        <field name="name">sigedat.frente.search</field>
        <field name="model">sigedat.frente</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="contrato_id" />
                <group expand="0" string="Group By">
                    <filter string="Acuerdo" context="{'group_by':'contrato_id'}" domain="" name="group_contrato_id"/>
                </group>
            </search>
        </field>
    </record>
    <record id="frente_form" model="ir.ui.view">
        <field name="name">sigedat.frente.form</field>
        <field name="model">sigedat.frente</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <group>
                        <field name="name" />
                        <field name="ubicacion" />
                        <field name="contrato_id" readonly="1"/>
                    </group>
                    <notebook>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="frente_tree">
        <field name="name">sigedat.frente.tree</field>
        <field name="model">sigedat.frente</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="ubicacion" />
                <field name="contrato_id" readonly="1"/>
            </tree>
        </field>
    </record>
</odoo>
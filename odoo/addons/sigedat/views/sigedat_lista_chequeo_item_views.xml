<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    =================================================================
    sigedat.lista_chequeo.item
    Item de la Lista de Chequeo
    =================================================================
    -->
    <record id="lista_chequeo_item_search" model="ir.ui.view">
        <field name="name">sigedat.lista_chequeo.item.search</field>
        <field name="model">sigedat.lista_chequeo.item</field>
        <field name="arch" type="xml">
            <search>
                <field name="lista_chequeo_id" />
                <field name="cumple" />
                <field name="solicitud_tramite_id" />
                <separator string="Cumple"/>
                <filter name="filtro_cumple_si"
                    string="Si"
                    help="Filtrar por si cumple"
                    domain="[('cumple', '=', 'si')]"
                />
                <filter name="filtro_cumple_no"
                    string="No"
                    help="Filtrar por no cumple"
                    domain="[('cumple', '=', 'no')]"
                />
                <group expand="0" string="Group By">
                    <filter string="Lista de chequeo" context="{'group_by':'lista_chequeo_id'}" domain="" name="group_lista_chequeo_id"/>
                    <filter string="Solicitud de trámite" context="{'group_by':'solicitud_tramite_id'}" domain="" name="group_solicitud_tramite_id"/>
                    <filter string="Cumple" context="{'group_by':'cumple'}" domain="" name="group_cumple"/>
                </group>
            </search>
        </field>
    </record>
    <record id="lista_chequeo_item_form" model="ir.ui.view">
        <field name="name">sigedat.lista_chequeo.item.form</field>
        <field name="model">sigedat.lista_chequeo.item</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <group>
                        <field name="lista_chequeo_id" readonly="1"/>
                        <field name="cumple" />
                        <field name="numero_lista_chequeo" readonly="1"/>
                        <field name="version_lista_chequeo" readonly="1"/>
                        <field name="solicitud_tramite_id" invisible="1"/>
                    </group>
                    <notebook>
                        <page string="Observaciones" attrs="{'invisible': [('cumple', '!=', 'no')]}">
                            <div class="alert alert-info">
                                Por favor tenga en cuenta que si una observación no tiene imagen no saldrá en el informe, para que una observación sin imagen salga en el informe debe estar relacionada en una observación con imagen.
                            </div>
                            <field name="observacion_ids">
                                <tree >
                                    <field name="observacion" attrs="{'required': [('cumple','=', 'no')]}"/>
                                    <field name="cumple" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="lista_chequeo_item_tree">
        <field name="name">sigedat.lista_chequeo.item.tree</field>
        <field name="model">sigedat.lista_chequeo.item</field>
        <field name="arch" type="xml">
            <tree>
                <field name="lista_chequeo_id" />
                <field name="seccion_id" />
                <field name="cumple" />
                <field name="numero_lista_chequeo" />
                <field name="version_lista_chequeo" />
                <field name="solicitud_tramite_id" />
            </tree>
        </field>
    </record>
</odoo>
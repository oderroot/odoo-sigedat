<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    =================================================================
    sigedat.grupo
    Grupo
    =================================================================
    -->
    <record id="grupo_search" model="ir.ui.view">
        <field name="name">sigedat.grupo.search</field>
        <field name="model">sigedat.grupo</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="grupo_id" />
                <group expand="0" string="Group By">
                </group>
            </search>
        </field>
    </record>
    <record id="grupo_form" model="ir.ui.view">
        <field name="name">sigedat.grupo.form</field>
        <field name="model">sigedat.grupo</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <group>
                        <field name="name" />
                        <field name="activo" />
                        <field name="grupo_id" />
                    </group>
                    <notebook>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="grupo_tree">
        <field name="name">sigedat.grupo.tree</field>
        <field name="model">sigedat.grupo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="activo" />
                <field name="grupo_id" />
            </tree>
        </field>
    </record>
</odoo>
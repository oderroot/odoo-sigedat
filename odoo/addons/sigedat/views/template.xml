<odoo>
    <data>

        <template id="layout" name="Main layout">&lt;!DOCTYPE html&gt;
            <html t-att-lang="lang and lang.replace('_', '-')"
                t-att-data-main-object="repr(main_object) if editable else None">
                <head>

                    <!-- Jquery -->
                    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                    
                    <!-- Leaflet -->
                    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
                    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>

                    <!-- Bootstrap -->
                    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous" />
                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8" crossorigin="anonymous"></script>

                    <style>
                      #map { 
                          widh: 50px;
                          height: 600px;
                      }
                      .leaflet-popup-content-wrapper {
                        width:32vh;
                      }
                    </style>

                    <meta charset="utf-8" />
                    <title><t t-esc="title"/></title>
                </head>
                <body>
                    <div id="wrapwrap">
                        <nav class="navbar navbar-expand-lg navbar-light bg-light">
                            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                            </div>
                        </nav>
                        <main>
                            <div class="container col-sm-10">
                                <h1 class="text-center">Sistema de Gestión de Datos Técnicos - SIGEDAT </h1>
                                <t t-raw="0"/>
                            </div>
                        </main>
                        <footer>
                            <div id="footer">
                                <div class="row">
                                    <div class="col-md-12 text-center">
                                        <p class="text-muted small">Empresa de Acueducto y Alcantarillado de Bogotá - EAAB<br/>Todos los derechos reservados.</p>
                                    </div>
                                </div>
                            </div>
                        </footer>
                    </div>

                    <script language="javascript" type="text/javascript">
                        console.log('SIGEDAT');
                    </script>
                </body>
            </html>
        </template>


        <template id="index">
            <script type="text/javascript" >
                var es_usuario_antiguo = "<t t-esc='es_usuario_antiguo' />";
                console.log(`es usuario antiguo: ${es_usuario_antiguo}`);
            </script>
            <t t-call="sigedat.layout">

                <t t-set="title">SIGEDAT</t>
                <div class="container vertical-center col-sm-12">

                    <div class="row">
                        <div class="col align-self-center">
                            <!--<button type="button" class="btn btn-warning" onclick="traer_tramite()">Mostar Trámites</button>-->
                            <div id="app"></div>
                        </div>
                    </div>
                </div>
                <script>
                    var datos = "<t t-esc='datos' />";
                </script>

            </t>
            <!-- <script type="text/javascript" src="/static/src/js/main.js"/> -->
            <script type="text/javascript" src="http://localhost:8080/js/main.js"/>
         
        </template>




        <template id="visor">
        
            <t t-call="sigedat.layout">

                <t t-set="title">SIGEDAT</t>
                <div class="container vertical-center col-sm-12">

                    <div class="row">
                        <div class="col align-self-center">
                            <div id="map" style=""></div>
                        </div>
                    </div>
                </div>

            </t>
            <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
            <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.7.1/leaflet.js"></script>
            <!-- <script type="text/javascript" src="/static/src/js/visor.js"/> -->
            <script type="text/javascript" src="http://localhost:8080/js/visor.js"/>
        </template>

    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    =================================================================
    sigedat.revisor.no_disponibilidad
    No Disponibilidad del Revisor
    =================================================================
    -->
    <record id="revisor_no_disponibilidad_search" model="ir.ui.view">
        <field name="name">sigedat.revisor.no_disponibilidad.search</field>
        <field name="model">sigedat.revisor.no_disponibilidad</field>
        <field name="arch" type="xml">
            <search>
                <field name="fecha_inicio" />
                <field name="fecha_fin" />
                <field name="revisor_id" />
                <group expand="0" string="Group By">
                    <filter string="Revisor" context="{'group_by':'revisor_id'}" domain="" name="group_by_revisor_id" />
                </group>
            </search>
        </field>
    </record>
    <record id="revisor_no_disponibilidad_form" model="ir.ui.view">
        <field name="name">sigedat.revisor.no_disponibilidad.form</field>
        <field name="model">sigedat.revisor.no_disponibilidad</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <group>
                        <field name="fecha_inicio" />
                        <field name="fecha_fin" />
                        <field name="revisor_id" readonly="0"/>
                    </group>
                    <notebook>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="revisor_no_disponibilidad_tree">
        <field name="name">sigedat.revisor.no_disponibilidad.tree</field>
        <field name="model">sigedat.revisor.no_disponibilidad</field>
        <field name="arch" type="xml">
            <tree>
                <field name="fecha_inicio" />
                <field name="fecha_fin" />
                <field name="revisor_id" />
            </tree>
        </field>
    </record>
</odoo>
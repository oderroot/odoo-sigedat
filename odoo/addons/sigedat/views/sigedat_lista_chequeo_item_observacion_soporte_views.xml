<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    =================================================================
    sigedat.lista_chequeo.item.observacion.soporte
    Soporte de la Observacion
    =================================================================
    -->
    <record id="lista_chequeo_item_observacion_soporte_search" model="ir.ui.view">
        <field name="name">sigedat.lista_chequeo.item.observacion.soporte.search</field>
        <field name="model">sigedat.lista_chequeo.item.observacion.soporte</field>
        <field name="arch" type="xml">
            <search>
                <field name="archivo" />
                <field name="archivo_nombre" />
                <field name="item_observacion_id" />
                <group expand="0" string="Group By">
                </group>
            </search>
        </field>
    </record>
    <record id="lista_chequeo_item_observacion_soporte_form" model="ir.ui.view">
        <field name="name">sigedat.lista_chequeo.item.observacion.soporte.form</field>
        <field name="model">sigedat.lista_chequeo.item.observacion.soporte</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <group>
                        <field name="archivo" filename="archivo_nombre" widget="image"/>
                        <field name="archivo_nombre" invisible="1"/>
                        <field name="item_observacion_id" invisible="1"/>
                    </group>
                    <notebook>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="lista_chequeo_item_observacion_soporte_tree">
        <field name="name">sigedat.lista_chequeo.item.observacion.soporte.tree</field>
        <field name="model">sigedat.lista_chequeo.item.observacion.soporte</field>
        <field name="arch" type="xml">
            <tree>
                <field name="archivo" filename="archivo_nombre" widget="file"/>
                <field name="archivo_nombre" invisible="1"/>
                <field name="item_observacion_id" invisible="1"/>
            </tree>
        </field>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    =================================================================
    sigedat.documento
    Documento
    =================================================================
    -->
    <record id="documento_search" model="ir.ui.view">
        <field name="name">sigedat.documento.search</field>
        <field name="model">sigedat.documento</field>
        <field name="arch" type="xml">
            <search>
                <field name="tipo_id" />
                <field name="ruta_carpeta" />
                <field name="solicitud_tramite_id" />
                <group expand="0" string="Group By">
                    <filter string="Tipo de documento" context="{'group_by':'tipo_id'}" domain="" name="group_tipo_id"/>
                    <filter string="Solicitud de trÃ¡mite" context="{'group_by':'solicitud_tramite_id'}" domain="" name="group_solicitud_tramite_id"/>
                </group>
            </search>
        </field>
    </record>
    <record id="documento_form" model="ir.ui.view">
        <field name="name">sigedat.documento.form</field>
        <field name="model">sigedat.documento</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <group>
                        <field name="solicitud_tramite_id" readonly="1"/>
                        <field name="tipo_id" readonly="1" options="{'no_open': True}" />
                        <field name="ruta_carpeta" readonly="1"/>
                        <field name="orden" required="1" />
                        <field name="tipo_documento" invisible="1"/>
                        <field name="archivo_nombre" invisible="1"/>
                        <field name="archivo" filename="archivo_nombre" widget="file" readonly="1"/>
                    </group>
                    <group>
                        <field name="imagen" nolabel="1" filename="archivo_nombre" widget="image" attrs="{'invisible': [('tipo_documento','!=', 'imagen')]}"/>
                        <field name="archivo" nolabel="1" filename="archivo_nombre"  attrs="{'invisible': ['|', ('tipo_documento','!=', 'otro'), ('archivo', '!=', False)]}" widget="file"/>
                        <field name="pdf" nolabel="1" filename="archivo_nombre" attrs="{'invisible': [('tipo_documento','!=', 'pdf')]}" widget="pdf_viewer" />
                    </group>
                    <notebook>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="documento_tree">
        <field name="name">sigedat.documento.tree</field>
        <field name="model">sigedat.documento</field>
        <field name="arch" type="xml">
            <tree>
                <field name="tipo_id" />
                <field name="orden" invisible="1" />
                <field name="ruta_carpeta" />
                <field name="archivo_nombre" />
                <field name="solicitud_tramite_id" />
            </tree>
        </field>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    =================================================================
    sigedat.cita.tipo
    Tipo de Cita
    =================================================================
    -->
    <record id="cita_tipo_search" model="ir.ui.view">
        <field name="name">sigedat.cita.tipo.search</field>
        <field name="model">sigedat.cita.tipo</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="abreviatura" />
                <group expand="0" string="Group By">
                </group>
            </search>
        </field>
    </record>
    <record id="cita_tipo_form" model="ir.ui.view">
        <field name="name">sigedat.cita.tipo.form</field>
        <field name="model">sigedat.cita.tipo</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <group>
                        <field name="name" />
                        <field name="abreviatura" />
                    </group>
                    <notebook>
                        <page string="Tipos de TrÃ¡mites Asociados">
                            <field name="tipo_tramite_ids" context="{'tipo_cita_id': active_id}" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="cita_tipo_tree">
        <field name="name">sigedat.cita.tipo.tree</field>
        <field name="model">sigedat.cita.tipo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="abreviatura" />
            </tree>
        </field>
    </record>
</odoo>